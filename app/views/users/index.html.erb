<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<table class="table table-borderd">
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-sm btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-outline-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
